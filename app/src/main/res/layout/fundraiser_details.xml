<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center">

        <Button
            android:id ="@+id/push_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textColor="#ffffff"
            android:layout_marginLeft="3dp"
            android:background="@drawable/redroundbutton"
            android:padding="1dp"
            />
        <View
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_marginTop="21dp"
            android:background="#C22400" />
        <Button
            android:id ="@+id/two_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:textColor="#C22400"
            android:background="@drawable/roundbutton"
            android:padding="1dp"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_marginTop="21dp"
            android:background="#dedbdb" />
        <Button
            android:id ="@+id/three_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:visibility="gone"
            android:textColor="#C22400"
            android:background="@drawable/grayroundmaterial"
            android:padding="1dp"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="13dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginRight="0dp"
            android:layout_marginTop="18dp"
            android:background="#dedbdb" />
        <Button
            android:id ="@+id/four_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:textColor="#C22400"
            android:background="@drawable/grayroundmaterial"
            android:padding="15dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center">
        <TextView
            android:id ="@+id/txt_one"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Basic Infromation"
            android:padding="15dp"

            />

        <TextView
            android:id ="@+id/txt_two"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Fundraisers details"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="#C22400"
            />


        <TextView
            android:id ="@+id/txt_three"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Organization Details"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            />

        <TextView
            android:id="@+id/txt_four"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="Other Details"
            android:textAlignment="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:focusableInTouchMode="true"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Fundraiser information"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:background="#f1eaea" />

            <TextView
                android:id="@+id/txt_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Name your fundraiser*"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txt_fundname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:text="@string/fundname"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/edt_frgtpswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/boxborder"
                android:padding="10dp"
                android:textSize="12dp" />





            <TextView
                android:id="@+id/txt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:text="Please use only alphabet,number and hypen"
                android:textColor="#000000"/>



            <TextView
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Add a Photo *"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txt_ex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:text="@string/cat"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txt_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:text="@string/cat"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/button_upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:background="#C22400"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
                android:text="Upload"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/fund_image"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginRight="50dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt_benificary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:visibility="gone"
                android:text="Write your story*"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/edt_benificary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/boxborder"
                android:padding="10dp"
                android:visibility="gone"
                android:textSize="12dp" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:background="#C22400"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
                android:text="Save and continue"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_previous"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="#00ffffff"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
                android:text="Previous"
                android:textColor="#C22400" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="If you do not wish to continue with this campaign,"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/click_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:text="Click Here"
                    android:textAllCaps="false"
                    android:textColor="#b70707" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>