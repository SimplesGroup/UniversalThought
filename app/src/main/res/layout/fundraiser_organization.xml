<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center">

        <Button
            android:id ="@+id/push_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textColor="#ffffff"
            android:layout_marginLeft="3dp"
            android:background="@drawable/redroundbutton"
            android:padding="15dp"
            />
        <View
            android:layout_width="80dp"
            android:layout_height="13dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_marginTop="18dp"
            android:background="#dedbdb" />
        <Button
            android:id ="@+id/two_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:textColor="#ffffff"
            android:background="@drawable/redroundbutton"
            android:padding="15dp"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="13dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_marginTop="18dp"
            android:background="#dedbdb" />
        <Button
            android:id ="@+id/three_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:textColor="#b70707"
            android:background="@drawable/roundbutton"
            android:padding="15dp"
            />

        <View
            android:layout_width="80dp"
            android:layout_height="13dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:layout_marginRight="0dp"
            android:layout_marginTop="18dp"
            android:background="#dedbdb" />
        <Button
            android:id ="@+id/four_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="4"
            android:textColor="#b70707"
            android:background="@drawable/grayroundmaterial"
            android:padding="15dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"

        android:gravity="center">
        <TextView
            android:id ="@+id/txt_one"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Basic Infromation"
            android:padding="15dp"

            />

        <TextView
            android:id ="@+id/txt_two"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Fundraisers details"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="#b70707"
            />


        <TextView
            android:id ="@+id/txt_three"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Organization Details"
            android:layout_weight="1"
            android:padding="15dp"
            />

        <TextView
            android:id ="@+id/txt_four"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Other Details"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            >

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Organization Details"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:background="#f1eaea" />

            <TextView
                android:id="@+id/txt_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Name of the organization*"
                android:textColor="#000000"/>


            <EditText
                android:id="@+id/edt_frgtpswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/boxborder"
                android:padding="10dp"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_cntctperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Are you the contact person for the organization's campaign?*"
                android:textColor="#000000"/>

            <RadioGroup
                android:id="@+id/rgOpinion"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <RadioButton
                    android:id="@+id/radiobtnexclnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes">
                </RadioButton>
                <RadioButton
                    android:id="@+id/radiobtngood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="No">
                </RadioButton>

            </RadioGroup>

            <TextView
                android:id="@+id/txt_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Website(if any)"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/edt_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/boxborder"
                android:padding="10dp"
                android:hint="http://"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Statutory information"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:background="#f1eaea" />

            <TextView
                android:id="@+id/txt_pan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="PAN of the organization *"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/edt_pan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/boxborder"
                android:padding="10dp"
                android:hint="http://"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/txt_fundname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:text="@string/fundname"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/button_upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:background="#b70707"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
                android:text="Save and continue"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/button_previous"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:paddingBottom="2dp"
                android:textAllCaps="false"
                android:text="Previous"
                android:textColor="#b70707" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="If you do not wish to continue with this campaign,"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/click_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:text="Click Here"
                    android:textAllCaps="false"
                    android:textColor="#b70707" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>