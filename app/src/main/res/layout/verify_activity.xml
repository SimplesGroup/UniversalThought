<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Verify Details"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:background="#f1eaea" />


                <TextView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Have you verified through phone call??*"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:visibility="visible"/>

                <RadioGroup
                    android:id="@+id/rgone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    >

                    <RadioButton
                        android:id="@+id/radiobtnoneyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        >

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radiobtnoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="No">

                    </RadioButton>

                </RadioGroup>
                <TextView
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Will you Suggest/Share to other to raise the funds?*"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:visibility="visible"/>


                <RadioGroup
                    android:id="@+id/rgtwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    >

                    <RadioButton
                        android:id="@+id/radiobtntwoyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        >

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radiobtntwono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="No">

                    </RadioButton>

                </RadioGroup>

                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Have you visited the diseased person personally?*"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:visibility="visible"/>


                <RadioGroup
                    android:id="@+id/rgthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    >

                    <RadioButton
                        android:id="@+id/radiobtnthreeyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        >

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radiobtnthreeno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="No">

                    </RadioButton>

                </RadioGroup>


                <Button
                    android:id="@+id/button_save1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="25dp"
                    android:background="#b70707"
                    android:paddingBottom="2dp"
                    android:text="Save and continue"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    />



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>